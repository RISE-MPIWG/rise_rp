!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-dark.sticky-top.bg-dark.flex-md-nowrap.p-0
      %a.navbar-brand.col-sm-3.col-md-2.mr-0{:href => "#"} Rise Resource Provider
      //%input.form-control.form-control-dark.w-100{"aria-label" => "Search", :placeholder => "Search", :type => "text"}/
      //%ul.navbar-nav.px-3
      //  %li.nav-item.text-nowrap
      //    %a.nav-link{:href => "#"} Sign out
    .container-fluid
      .row
        %nav.col-md-2.d-none.d-md-block.bg-light.sidebar
          .sidebar-sticky
            %ul.nav.flex-column
              %li.nav-item
                = active_link_to [:pages], class: 'nav-link' do
                  %span{"data-feather" => "home"}
                  Home
                %span.sr-only (current)
              %li.nav-item
                = active_link_to [:collections], class: 'nav-link' do
                  %span{"data-feather" => "box"}
                  Collections
              %li.nav-item
                %a.nav-link{:href => "#"}
                  %span{"data-feather" => "bar-chart-2"}
                  Statistics
            %h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
              %span Settings
            %ul.nav.flex-column.mb-2
              %li.nav-item
                %a.nav-link{:href => "#"}
                  %span{"data-feather" => "list"}
                  Metadata
              %li.nav-item
                %a.nav-link{:href => "#"}
                  %span{"data-feather" => "shield"}
                  Security
        %main.col-md-9.ml-sm-auto.col-lg-10.pt-3.px-4{:role => "main"}
          = yield
  %script{:src => "https://unpkg.com/feather-icons/dist/feather.min.js"}
  :javascript
    feather.replace()